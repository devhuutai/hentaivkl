<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- CSS -->
    <link rel="stylesheet" href="./../../assets/erp/css/bootstrap-reboot.min.css" />
    <link rel="stylesheet" href="./../../assets/erp/css/bootstrap-grid.min.css" />
    <link rel="stylesheet" href="./../../assets/erp/css/magnific-popup.css" />
    <link rel="stylesheet" href="./../../assets/erp/css/select2.min.css" />
    <link rel="stylesheet" href="./../../assets/erp/css/admin.css" />

    <!-- Favicons -->
    <link rel="icon" type="image/png" href="icon/favicon-32x32.png" sizes="32x32" />
    <link rel="apple-touch-icon" href="icon/favicon-32x32.png" />

    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <meta name="author" content="Dmitry Volkov" />
    <title>Cấu hình trang chủ</title>
  </head>

  <body>
    <!-- header -->
    <header class="header">
      <div class="header__content">
        <!-- header logo -->
        <a href="index.html" class="header__logo">
          <img src="./../../assets/erp/img/logo.svg" alt="" />
        </a>
        <!-- end header logo -->

        <!-- header menu btn -->
        <button class="header__btn" type="button">
          <span></span>
          <span></span>
          <span></span>
        </button>
        <!-- end header menu btn -->
      </div>
    </header>
    <!-- end header -->

    <!-- sidebar -->
    <div class="sidebar">
      <!-- sidebar logo -->
      <a href="index.html" class="sidebar__logo">
        <img src="./../../assets/erp/img/logo.svg" alt="" />
      </a>
      <!-- end sidebar logo -->

      <!-- sidebar user -->
      <div class="sidebar__user">
        <div class="sidebar__user-img">
          <img src="./../../assets/erp/img/user.svg" alt="" />
        </div>

        <div class="sidebar__user-title">
          <span>Admin</span>
          <p>John Doe</p>
        </div>

        <button class="sidebar__user-btn" type="button">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <path
              d="M4,12a1,1,0,0,0,1,1h7.59l-2.3,2.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l4-4a1,1,0,0,0,.21-.33,1,1,0,0,0,0-.76,1,1,0,0,0-.21-.33l-4-4a1,1,0,1,0-1.42,1.42L12.59,11H5A1,1,0,0,0,4,12ZM17,2H7A3,3,0,0,0,4,5V8A1,1,0,0,0,6,8V5A1,1,0,0,1,7,4H17a1,1,0,0,1,1,1V19a1,1,0,0,1-1,1H7a1,1,0,0,1-1-1V16a1,1,0,0,0-2,0v3a3,3,0,0,0,3,3H17a3,3,0,0,0,3-3V5A3,3,0,0,0,17,2Z"
            />
          </svg>
        </button>
      </div>
      <!-- end sidebar user -->

      <!-- sidebar nav -->
      <%-include('../sidebar')%>

      <!-- end sidebar nav -->

      <!-- sidebar copyright -->
      <div class="sidebar__copyright">© FlixTV.template, 2021. <br />Create by <a href="https://themeforest.net/user/dmitryvolkov/portfolio" target="_blank">Dmitry Volkov</a></div>
      <!-- end sidebar copyright -->
    </div>
    <!-- end sidebar -->

    <!-- main content -->
    <main class="main">
      <div class="container-fluid">
        <div class="row">
          <!-- main title -->
          <div class="col-12">
            <div class="main__title">
              <h2>Cấu hình trang chủ</h2>
            </div>
          </div>
          <!-- end main title -->
          <!-- form -->
          <div class="col-12">
            <form action="#" class="form">
              <div class="row">
                <div class="col-12 col-md-7 form__content">
                  <div class="row">
                    <div class="col-12">
                      <div class="form__group">
                        <input type="text" name="title" id="title" class="form__input" value="<%=dataConfigsFooterTitle%>" placeholder="Tiêu đề" />
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="form__group">
                        <input type="text" name="keywords" id="keywords" class="form__input" value="<%=dataConfigsFooterKeywords%>" placeholder="keywords" />
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="form__group">
                        <textarea name="description" id="description" value="<%=dataConfigsFooterDescription%>" class="form__textarea" placeholder="Mô tả"><%=dataConfigsFooterDescription%></textarea>
                      </div>
                    </div>

                    <div class="col-12 col-sm-6 col-lg-3">
                      <div class="form__group">
                        <input type="text" name="copy" id="copy" value="<%=dataConfigsFooterCopy%>" class="form__input" placeholder="CopyRight" />
                      </div>
                    </div>
                    <div class="col-12 col-sm-6 col-lg-8">
                      <div class="form__group">
                        <input type="text" name="tags" id="tags" value="<%=dataConfigsFooterTags%>" class="form__input" placeholder="Thẻ tags" />
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-12">
                  <div class="row">
                    <div class="col-12">
                      <button type="button" id="submitConfigsHome" class="form__btn">publish</button>
                    </div>
                  </div>
                </div>
              </div>
            </form>
          </div>
          <!-- end form -->
        </div>
      </div>
    </main>
    <!-- end main content -->

    <!-- JS -->
    <script src="./../../assets/erp/js/jquery-3.5.1.min.js"></script>
    <script src="./../../assets/erp/js/bootstrap.bundle.min.js"></script>
    <script src="./../../assets/erp/js/jquery.magnific-popup.min.js"></script>
    <script src="./../../assets/erp/js/smooth-scrollbar.js"></script>
    <script src="./../../assets/erp/js/select2.min.js"></script>
    <script src="./../../assets/erp/js/admin.js"></script>
  </body>
</html>
